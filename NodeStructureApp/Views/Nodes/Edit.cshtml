@model NodeStructureApp.NodeTbl


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 style="text-align:center">Node Modification</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="container" style="text-align:center">
            <div class="row">
                <div class="form-group">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.NodeName, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.NodeName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NodeName, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.ParentNodeId, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.DropDownList("ParentNodeId", ViewBag.ParentNodeId as SelectList, "Select Parent Node", new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label col-md-2" })
                        @{
                            var isChecked = Model.IsActive ?? false;
                        }
                        @Html.CheckBox("IsActive", isChecked, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
